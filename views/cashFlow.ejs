<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="CSS/home.css">
    <link rel="stylesheet" href="CSS/budgets.css">
    <title>Document</title>
</head>
<body>
  <div action="/cashFlow" method="POST">
    <div>
      <input type="text" readonly name="name" value="
      Proyecto: <%= token.name %>
      ">
    </div>
      <div class="container mt-5 pt-5">
          <%- include('./partials/headBudget'); %>
        </div>
      <div class="container mt-5">
        
  
          <table class="table">
              <thead>
                <tr>
                  <th scope="col">Titulos</th>
                  <% for(var i=0; i< data.length; i++) { %>

                  <% if(data[i].cashFlow[0] != undefined) { %>
                    <th scope="col"><%= data[i].cashFlow[0] %></th>
                    <% } %>

                  <% } %>
                </tr>
              </thead>
              <tbody id="table-flujo">
                <tr>
                  <th scope="row">
                    <label for="">Ingresos</label>
                  </th>
                  <% for(var i=0; i< data.length; i++) { %>
  
                    <% if(data[i].cashFlow[0] != undefined) { %>
                      <th scope="row"> <input type="text" readonly value="<%= data[i].cashFlow[1] %>"></th>
                      <% } %>
  
                    <% } %>
                </tr>
                <tr>
                  <th scope="row">
                    <label for="">Egresos</label>
                  </th>
                  <% for(var i=0; i< data.length; i++) { %>
  
                    <% if(data[i].cashFlow[0] != undefined) { %>
                      <th scope="row"> <input type="text" readonly></th>
                      <% } %>
  
                    <% } %>
                </tr>
                <tr>
                  <th scope="row">
                    <label for="">Total</label>
                  </th>
                  <% for(var i=0; i< data.length; i++) { %>
  
                    <% if(data[i].cashFlow[0] != undefined) { %>
                      <th scope="row"> <input type="text" readonly></th>
                      <% } %>
  
                    <% } %>
                </tr>
              </tbody>
             
              <!-- <td><input type="text" disabled></td> -->
            </table>
            <div>
              <a class="btn btn-primary btn-lg" href="#miModal" role="button">Agregar</a></div>
            </div>
      </div>
    </div>

  <div id="miModal" class="modals">
    <div class="modals-contenido">
      <a href="#">X</a>
      <h2>Nueva Columna</h2>
      <form action="/cashFlow" method="POST">
        <div>
          <input hidden type="text" readonly name="name" value="<%= token.name %>">
        </div>
        <label>Selecciona el mes:
          <input list="browsers" name="month" /></label>
          <datalist id="browsers" >
            <option value="Enero">
            <option value="Febrero">
            <option value="Marzo">
            <option value="Abril">
            <option value="Mayo">
            <option value="Junio">
            <option value="Julio">
            <option value="Agosto">
            <option value="Septiembre">
            <option value="Octubre">
            <option value="Noviembre">
            <option value="Diciembre">
          </datalist>
        <input type="text" name="amount">
        <button type="submit">Crear</button>
      </form>
    </div>  
  </div>
</body>
</html>